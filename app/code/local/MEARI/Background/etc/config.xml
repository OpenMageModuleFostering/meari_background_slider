<?xml version="1.0"?>
<config>
    <modules>
        <MEARI_Background>
            <version>1.0.1</version>
        </MEARI_Background>
    </modules>
    <frontend>
        <routers>
            <background>
                <use>standard</use>
                <args>
                    <module>MEARI_Background</module>
                    <frontName>background</frontName>
                </args>
            </background>
        </routers>
        <layout>
            <updates>
                <background>
                    <file>background.xml</file>
                </background>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<background>
				<use>admin</use>
				<args>
					<module>MEARI_Background</module>
					<frontName>background</frontName>
				</args>
			</background>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<background module="background">
				<title>Background</title>
				<sort_order>80</sort_order>               
				<children>
					<images module="background">
						<title>Manage Images</title>
						<sort_order>0</sort_order>
						<action>background/adminhtml_background</action>
					</images>
				</children>
			</background>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<background translate="title" module="background">
							<title>Background Module</title>
							<sort_order>10</sort_order>   
							<children>
								<images module="background">
									<title>Manage Images</title>
									<sort_order>0</sort_order>
									<action>background/adminhtml_background</action>
								</images>
							</children>
						</background>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<background>
					<file>background.xml</file>
				</background>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <background>
                <class>MEARI_Background_Model</class>
                <resourceModel>background_mysql4</resourceModel>
            </background>
            <background_mysql4>
                <class>MEARI_Background_Model_Mysql4</class>
                <entities>
                    <background>
                        <table>background</table>
                    </background>
                </entities>
            </background_mysql4>
        </models>
        <resources>
            <background_setup>
                <setup>
                    <module>MEARI_Background</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </background_setup>
            <background_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </background_write>
            <background_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </background_read>
        </resources>
        <blocks>
            <background>
                <class>MEARI_Background_Block</class>
            </background>
        </blocks>
        <helpers>
            <background>
                <class>MEARI_Background_Helper</class>
            </background>
        </helpers>
    </global>
</config>